---js
{
  pagination: {
    data: "articles",
    size: 1,
    alias: "article",
    before: function(data) {
      console.log(data);
      return data;
    }
  },
  permalink: "/{{ article.id }}/index.html"
}
---
<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ article.title }}</title>
    <meta name="description" content="{{ article.description }}">
    <link rel="stylesheet" href="../public/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700;800;900&amp;display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
  </head>
  <body class="bg-blue-900">
    {% include "header.njk" %}
    {% include "banner.njk" %}
    <main class="mx-auto article-body text-gray-200 text-base px-2">{{ article.content | safe}}</main>
    <script src="/bundle.js"></script>
  </body>
</html>